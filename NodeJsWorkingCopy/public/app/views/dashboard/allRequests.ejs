<div class="row myRequests-section">
    <div class="col-lg-3">
        <h3>Search Requests</h3>
        <div class="well">
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        <input type="text" class="form-control" value="" placeholder="Search by title" name="title"  ng-model="requests.title" />
                    </div>
                    <div class="form-group">
                        <select class="form-control" name="category" ng-model="requests.category">
                            <option value ="N" selected>Select Category</option>
                            <option value="volvo">Volvo</option>
                            <option value="saab">Saab</option>
                            <option value="mercedes">Mercedes</option>
                            <option value="audi">Audi</option>
                        </select>
                    </div>
                    <div class="form-group" style="display:none">
                        <select class="form-control">
                            <option>Select Department</option>
                            <option value="volvo">Volvo</option>
                            <option value="saab">Saab</option>
                            <option value="mercedes">Mercedes</option>
                            <option value="audi">Audi</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <h4 style="font-weight: normal;">Priority</h4>
                        <label class="myRequests-label">
                            <input type="checkbox" name="high" ng-model="requests.high">&nbsp;&nbsp;High
                        </label>
                        <label class="myRequests-label">
                            <input type="checkbox" name="medium" ng-model="requests.medium">&nbsp;&nbsp;Medium
                        </label>
                        <label class="myRequests-label">
                            <input type="checkbox" name="low" ng-model="requests.low">&nbsp;&nbsp;Low
                        </label>
                    </div>
                    <div class="form-group">
                        <h4 style="font-weight: normal;">Status</h4>
                        <div class="checkbox">
                            <label class="myRequests-label">
                                <input type="checkbox" name="open" ng-model="requests.open">&nbsp;&nbsp;Open
                            </label>
                        </div>
                        <div class="checkbox">
                            <label class="myRequests-label">
                                <input type="checkbox" name="assigned" ng-model="requests.assigned">&nbsp;&nbsp;Assigned
                            </label>
                        </div>
                        <div class="checkbox">
                            <label class="myRequests-label">
                                <input type="checkbox" name="inprogress" ng-model="requests.inprogress">&nbsp;&nbsp;In Progress
                            </label>
                        </div>
                        <div class="checkbox">
                            <label class="myRequests-label">
                                <input type="checkbox" name="hold" ng-model="requests.hold">&nbsp;&nbsp;Hold
                            </label>
                        </div>
                        <div class="checkbox">
                            <label class="myRequests-label">
                                <input type="checkbox" name="resolved" ng-model="requests.resolved">&nbsp;&nbsp;Resolved
                            </label>
                        </div>
                        <div class="checkbox">
                            <label class="myRequests-label">
                                <input type="checkbox" name="reopen" ng-model="requests.reopen">&nbsp;&nbsp;Re Open
                            </label>
                        </div>
                        <div class="checkbox">
                            <label class="myRequests-label">
                                <input type="checkbox" name="closed" ng-model="requests.closed">&nbsp;&nbsp;Closed
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-6">
                                <button class="btn btn-default btn-block">Reset</button>
                            </div>
                            <div class="col-lg-6">
                                <button ng-click="search()" class="btn btn-request btn-block">Search</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-9">
        <h3>My Requests</h3>
        <div ng-repeat="top in myrequests">
        <div class="row request-list-tile">
            <div class="col-lg-3" style="padding-left: 0px;">
                <img alt="Request Image" src="app/myRequestImages/roads.PNG" style="min-height: 180px;" class="img-responsive" />
            </div>
            <div class="col-lg-9">
                <div class="row">
                    <div class="col-lg-3">
                        <a href="" ui-sref="dashboard.viewrequest" title="click here to view in detail"><h3>{{top.request_category_name}}</h3></a>
                    </div>
                    <div class="col-lg-9">
                        <button style="margin-top: 14px;" class="btn btn-default pull-right"><span class="glyphicon glyphicon-thumbs-up"></span>&nbsp;&nbsp;Likes&nbsp;&nbsp;({{34}})</button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <p>{{top.request_title}}&nbsp;&nbsp;/&nbsp;&nbsp;{{top.priority_name}}&nbsp;&nbsp;/&nbsp;&nbsp;{{top.status_desc}}</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <p>{{top.request_description}}</p>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-lg-12">
                        <label class="myRequests-label"><span class="glyphicon glyphicon-map-marker"></span>&nbsp;{{top.location}}</label>
                    </div>
                </div>
            </div>
        
        </div>
        </div>
      
        </div>
    </div>
</div>
