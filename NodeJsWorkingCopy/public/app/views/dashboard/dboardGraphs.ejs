<div class="row" style="margin-top: 30px;margin-bottom: 30px;">
    <div class="col-lg-4">
        <div class="dboard-graph-area">
            <h3>By Priority</h3>
            <div id="pieGraph" class="dboard-graph">
                <canvas id="pie" class="chart chart-pie" data="data" labels="labels" colours="colors" legend='legend'>
                </canvas>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="dboard-graph-area">
            <h3>By Status</h3>
            <div id="BarGraph" class="dboard-graph">
                <canvas id="doughnut" class="chart chart-doughnut" data="statusdata" labels="statuslabel" colours="colors" legend="legend">
                </canvas>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="dboard-graph-area">
            <h3>Citizen requests trend per month</h3>
            <div id="LineGraph" class="dboard-graph">
                <canvas id="line" class="chart chart-line" data="linedata" labels="linelabels" colours="colors">
                </canvas>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <h3>Top Rated Requests</h3>
        <div style="border:1px solid #ccc;padding-top: 16px;border-radius: 6px;margin-bottom: 30px;">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Rank</th>
                        <th>Name</th>
                        <th>Location</th>
                        <th>Date</th>
                        <th>Votes</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody style="cursor:pointer;">
                    <tr ng-repeat="top in requestlist" ng-click="viewRequest(top)">
                        <td>{{$index+1}}</td>
                        <td>{{top.first_name}}</td>
                        <td>{{top.location}}</td>
                        <td>{{top.created_date}}</td>
                        <td>{{top.count}}</td>
                        <td>{{top.status_name}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
