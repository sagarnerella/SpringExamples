<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <div class="row">
                <div class="col-lg-12">
                </div>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="row">
                <div class="col-lg-3">
                    <label class="myRequests-label" style="font-size: 16px;">Location</label>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <input id="location" type="text" class="form-control" />
                    </div>
                    <div id="current">
                    </div>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-lg-6 col-lg-offset-3">
                    <div id="googleMap" style="width:100%;height:300px;"></div>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-lg-3">
                    <label class="myRequests-label" style="font-size: 16px;">Title</label>   
                </div>
                <div class="col-lg-6">
                    <input type="text" class="form-control" placeholder="Enter request title" />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-lg-3">
                    <label class="myRequests-label" style="font-size: 16px;">Photos</label>
                </div>
                <div class="col-lg-6">
                    <input type="file" accept="image/*" class="form-control"/>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-lg-3">
                    <label class="myRequests-label" style="font-size: 16px;">Visibility</label>
                </div>
                <div class="col-lg-6">
                    
                </div>
            </div>
            <div class="row form-group">
                <div class="col-lg-3">
                    <label class="myRequests-label" style="font-size: 16px;">Anonymous</label>
                </div>
                <div class="col-lg-6">
                    <label>
                      <input type="checkbox">
                    </label>
                </div>
            </div>
        </div>
    </div>
</div>
